@model CMS.BLL.Admin.Models.ChangePassword
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="easyui-panel" title="密码修改">
        @Html.ValidationSummary(true)
        <div style="padding:10px 60px 20px 60px">
            <table cellpadding="5">
                <tr>
                    <td>@Html.LabelFor(model => model.OriginalPassword)</td>
                    <td>@Html.EditorFor(model => model.OriginalPassword, new { htmlAttributes = new { @class = "easyui-textbox" } })@Html.ValidationMessageFor(model => model.OriginalPassword)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Password)</td>
                    <td>@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "easyui-textbox" } })@Html.ValidationMessageFor(model => model.Password)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.ConfirmPassword)</td>
                    <td>@Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "easyui-textbox" } })@Html.ValidationMessageFor(model => model.ConfirmPassword)</td>
                </tr>
            </table>
            <div style="text-align:center;padding:5px">
                <input type="submit" value="修改" />
                <input type="reset" value="取消">
            </div>
        </div>
    </div>
}
